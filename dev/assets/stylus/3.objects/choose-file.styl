.o-choose-file
	position relative
	display inline-block
	clearfix()
	&__label
		position relative
		float left
		padding-right 27px
		margin-right 10px
		color $link-color
		font-family inherit
		font-size 14px
		font-weight 700
		overflow hidden
		cursor pointer
		&:after
			position absolute
			display inline-block
			content ''
			height 17px
			width 20px
			top 0
			right 0
			background-color transparent
			background-image url('data:image/svg+xml;base64,')
			background-position center center
			background-repeat no-repeat
			background-size contain
			pointer-events none
			z-index 9
	&__input-file
		position absolute
		display inline-block
		top 0
		left 0
		min-width 100%
		min-height 100%
		cursor inherit
		opacity 0
		background-color white
	&__path-file
		position relative
		float left
		padding-left 7px
		color $text-color
		font-family inherit
		font-size 14px
		font-weight 300
		border-left 1px solid #a3a3a3
		